assign [app_id="org.telegram.desktop"] 6
#assign [class="KeePassXC"] 7


#-----------------
# Startup
#-----------------

# Pipewire
exec /usr/bin/pipewire
exec /usr/bin/pipewire-pulse
exec /usr/bin/pipewire-media-session

# swaylock & swayidle
exec swayidle -w \
         timeout 300 'swaylock -f -c 000000' \
         timeout 450 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
         before-sleep 'swaylock -f -c 000000'

# wmname: necessary for android studio to display windows properly on sway for now (22/10/2021)
exec wmname LG3D

# test


#-----------------
# System Config
#-----------------

include /etc/sway/config.d/*

